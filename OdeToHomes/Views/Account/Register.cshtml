@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "TheForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
            </li>
            <li>
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { type="email" })
            </li>
            @*<li>
                @Html.LabelFor(m => m.AreaCode)
                (@Html.TextBoxFor(m => m.AreaCode, new { type="tel", style="width:25px;"})
                )@Html.TextBoxFor(m => m.Prefix, new { type="tel", style="width:25px;"})
                -@Html.TextBoxFor(m => m.PhoneBody, new { type="tel", style="width:35px;"})
            </li>*@
            <li>
                Desination for your New Home
                @Html.DropDownList("Id", (SelectList) ViewData["listStates"], "Select a State", new{
                onchange = "document.getElementById('TheForm');"
                })
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

